<style>
  .error {
    color: #ff3860;
  }

  label.is-danger {
    color: #ff3860;
  }
</style>

<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <br>
    <h1 class="title">
      <img src="/images/star.svg" alt="">
      Simply reset your password
    </h1>

    <hr>

    <h4 class="title is-4">Provide your password</h4>

    {{#if errormessage}}
      <hr>
      <p class="error">
        {{errormessage}}
      </p>
    {{/if}}

    <form method="POST">
      <div class="field">
        <label class="label {{#if errors.email}}is-danger{{/if}}" for="email">
          {{#if errors.email}}
            {{errors.email.message}}
          {{else}}
            Email address
          {{/if}}
        </label>
        <p class="control has-icons-left has-icons-right">
          <input class="input {{#if errors.email}}is-danger{{/if}}" type="text" placeholder="Your email address"
                 id="email" name="email" value="{{email}}">
          <span class="icon is-small is-left">
            <i class="fa fa-user"></i>
          </span>
          {{#if errors.email}}
            <span class="icon is-small is-right">
             <i class="fa fa-warning"></i>
            </span>
          {{/if}}
        </p>
        {{#unless email}}
          <p class="help">Youâ€™ll receive an email with instructions to reset your password.</p>
        {{/unless}}
      </div>

      <button class="button is-primary" type="submit">Reset password</button>

    </form>

  </div>
</div>
