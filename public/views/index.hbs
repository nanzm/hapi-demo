    <div class="container">
        <div class="columns content">
            <div class="column">
                <h2>Top TV Shows</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="columns content">
            {{#each shows}}
            <div class="column">
                <a href="/shows/{{ids.slug}}">
                    <img src="{{images.poster}}" width="">
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</section>