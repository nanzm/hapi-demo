<div class="navbar-start">
    <a class="navbar-item" href="/movies">
        Movies
    </a>
    <a class="navbar-item" href="/shows">
        TV Shows
    </a>
    <a class="navbar-item" href="/discover">
        Discover
    </a>
</div>

<div class="navbar-end">
    <div class="navbar-menu">

        {{#if user}}
            <div class="navbar-item has-dropdown is-hoverable">

                <a class="navbar-link" href="/profile">
                    <figure class="image is-16x16" style="margin-right: 8px;">
                        <img src="{{user.gravatar}}">
                    </figure>
                    Profile
                </a>
                <div class="navbar-dropdown">
                    <a href="/profile" class="navbar-item">
                        <p>
                            <figure class="image is-16x16" style="margin-right: 14px;">
                                <img src="/images/user-check.svg" alt="">
                            </figure>
                        </p>
                        <p>
                            <strong>Profile</strong>
                            <br>
                            <small>
                                Update your profile settings
                            </small>
                        </p>
                    </a>
                    <hr class="navbar-divider">
                    <a href="/watchlist" class="navbar-item">
                        <p>
                            <figure class="image is-16x16" style="margin-right: 8px;">
                                <img src="/images/tv.svg">
                            </figure>
                        </p>
                        <p>
                            <strong>
                                Watchlist
                            </strong>
                            <br>
                            <small>
                                Save movies and TV shows for the weekends.
                            </small>
                        </p>
                    </a>
                </div>
            </div>
            <a class="navbar-item" href="/logout">
                <figure class="image is-16x16" style="margin-right: 8px;">
                    <img src="/images/log-out.svg" alt="">
                </figure>
                Logout
            </a>
        {{else}}
            <div class="navbar-item">
                <div class="field is-grouped">
                    <p class="control">
                        <a class="button is-primary" href="/signup">
                            Sign up
                        </a>
                    </p>
                    <a class="button" href="/login">
                        <figure class="image is-16x16" style="margin-right: 8px;">
                            <img src="/images/log-in.svg" alt="">
                        </figure>
                        Log in
                    </a>
                </div>
            </div>
        {{/if}}
    </div>
</div>